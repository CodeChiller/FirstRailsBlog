<h1>Welcome</h1>
<% @posts.each do |post| %>
	<h1><%= link_to post.title, post %></h1>
	<p><%= post.content %></p>
	<p><%= link_to "Edit", edit_post_path(post)%> | <%= link_to "Delete", post, :confirm => "Are you sure?", :method => "delete" %> </p>
<% end %>
<p><%= link_to "Add new post", new_post_path %></p>
