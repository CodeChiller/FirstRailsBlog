<h1>Add new post</h1>

<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :content %><br/>
		<%= f.text_area :content %>
	</p>
	<p>
		<%= f.submit "add" %>
	</p>
<% end %>
<%= link_to  "back", root_url %>